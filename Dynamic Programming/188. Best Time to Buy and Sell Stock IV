//RECURSION
class Solution {
    private:
    int solve(int k,int i,int buy,vector<int>& prices){
        int n=prices.size();
        int profit=0;

        //base case
        if(i>=n || k==0) return 0;

        //allowed to buy
        if(buy==1){
            int bought=-prices[i]+solve(k,i+1,0,prices);
            int notbought=0+solve(k,i+1,1,prices);
            profit=max(bought,notbought);
        }

        //not allowed to buy
        if(buy==0){
            int sell=prices[i]+solve(k-1,i+1,1,prices);
            int notsell=0+solve(k,i+1,0,prices);
            profit=max(sell,notsell);
        }
        return profit;
    } 
public:
    int maxProfit(int k, vector<int>& prices) {
        int n=prices.size();
        return solve(k,0,1,prices);
    }
};
