//RECURSION
class Solution {
  private:
    int solve(vector<vector<int>>& arr,int day,int last){
        int n=arr.size();
        
        //base case
        if(day==0){
            int maxPoint=0;
            for(int i=0; i<3; i++){
                if(i!=last){
                    maxPoint=max(maxPoint,arr[0][i]);
                }
            }
            return maxPoint;
        }
        
        //Recursive call
        int maxPoint=0;
        for(int i=0; i<3; i++){
            int point=0;
            if(i!=last){
                point=arr[day][i] + solve(arr,day-1,i);
            }
            maxPoint=max(point,maxPoint);
        }
        return maxPoint;
    }
  public:
    int maximumPoints(vector<vector<int>>& arr) {
        int n=arr.size();
        return solve(arr,n-1,3);
    }
};
