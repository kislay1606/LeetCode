//MEMOIZATION
class Solution {
private:
    int solve(int i,int buy,vector<int>&prices,vector<vector<int>>&dp){
        int n=prices.size();
        int profit=0;

        //base case
        if(i>=n) return 0;

        if(dp[i][buy] != -1) return dp[i][buy];

        //allowed to buy
        if(buy==1){
            int bought=-prices[i]+solve(i+1,0,prices,dp);
            int notbought=0+solve(i+1,1,prices,dp);
            profit=max(bought,notbought);
        }

        //not allowed to buy so sell
        if(buy==0){
            int sell=prices[i]+solve(i+2,1,prices,dp); //cooldown after selling
            int notsell=0+solve(i+1,0,prices,dp);
            profit=max(sell,notsell);
        }
        return dp[i][buy]=profit;
    }    
public:
    int maxProfit(vector<int>& prices) {
        int n=prices.size();
        vector<vector<int>>dp(n,vector<int>(2,-1));
        return solve(0,1,prices,dp);
    }
};

//TABULATION
class Solution {  
public:
    int maxProfit(vector<int>& prices) {
        int n=prices.size();
        int profit=0;
        vector<vector<int>>dp(n+2,vector<int>(2,0));
        dp[n][0]=dp[n][1]=0;
        for(int i=n-1; i>=0; i--){
            for(int buy=0; buy<2; buy++){
                //allowed to buy
                if(buy==1){
                    int bought=-prices[i]+dp[i+1][0];
                    int notbought=0+dp[i+1][1];
                    profit=max(bought,notbought);
                }

                //not allowed to buy so sell
                if(buy==0){
                    int sell=prices[i]+dp[i+2][1]; //cooldown after selling
                    int notsell=0+dp[i+1][0];
                    profit=max(sell,notsell);
                }

                dp[i][buy]=profit;
            }
        }
        return dp[0][1];
    }
};
