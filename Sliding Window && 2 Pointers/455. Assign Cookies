//OPTIMAL - 2 Pointer
class Solution {
public:
    int findContentChildren(vector<int>& g, vector<int>& s) {
        sort(g.begin(),g.end());
        sort(s.begin(),s.end());

        int gi=0;
        int si=0;

        int count=0;

        while(gi<g.size() && si<s.size()){
            //greed can be satisfied so move to next student and next cookie
            if(s[si]>=g[gi]){
                count++;
                gi++;
                si++;
            }
            else si++; //move to next cookie size for same student greed
        }
        return count;
    }
};
