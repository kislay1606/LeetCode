class Solution {
public:
    int ladderLength(string beginWord, string endWord, vector<string>& wordList) {
        unordered_set<string>st(wordList.begin(),wordList.end()); //works as visited set

        queue<pair<string,int>>q;
        q.push({beginWord,1});
        st.erase(beginWord); //mark visited

        while(!q.empty()){
            string word=q.front().first;
            int steps=q.front().second;
            q.pop();

            if(word==endWord){
                return steps;
            }

            for(int i=0; i<word.size(); i++){
                char original=word[i];

                for(char ch='a'; ch<='z'; ch++){
                    word[i]=ch;

                    //new word formed exists in the wordlist
                    if(st.find(word) != st.end()){
                        q.push({word,steps+1});
                        st.erase(word);
                    }
                }
                word[i]=original; //word not found then change the og ch and check again
            }
        }
        return 0;
    }
};
